---
// ContentCarouselIndex.astro
import Carousel from './Carousel.astro';
import Button from './Button.astro';
import DeimanWhite from '../Icons/DeimanWhite.astro';
---

<Carousel>

<!-- Slide 1 -->
  <div class="carousel-slide relative">
    <picture>
      <source srcset="/images/carousel/car-1-phone.jpg" media="(max-width: 768px)" />
      <img src="/images/carousel/car-1.jpg" alt="El sabor hace al producto" class="absolute inset-0 w-full h-full object-cover -z-10" />
    </picture>

    <div class="absolute inset-0 flex flex-col items-center justify-center text-white text-center px-4 drop-shadow-xl">
      <DeimanWhite 
      class="w-60 sm:w-56 md:w-72 mb-4 animate-fade-to-red" 
    />
    
      <hr class="w-16 sm:w-24 md:w-32 border-t-2 border-white mb-6 mt-6" />
      <p class="text-base sm:text-xl md:text-xl font-bold tracking-wide drop-shadow-xl uppercase "
      style="text-shadow: 1px 1px 2px rgba(0,0,0,0.2);"
      >
        EL SABOR HACE AL PRODUCTO
      </p>
    </div>
  </div>



  <!-- Slide 2 -->
  <div class="carousel-slide relative">
    <picture>
      <!-- <source srcset="/images/carousel/car-2-mobile.jpg" media="(max-width: 768px)" /> -->
      <img src="/images/carousel/car-2.jpg" alt="Sabores de repostería" class="absolute inset-0 w-full h-full object-cover -z-10" />
    </picture>

        <!-- Overlay oscuro -->
        <div class="absolute inset-0 bg-black/20 z-0"></div>

    <div class="absolute inset-0 flex items-center justify-end text-white px-4 sm:px-10 md:px-20">
      <div class="max-w-md text-right">
        <h2 class="text-2xl sm:text-4xl md:text-5xl font-pastel mb-4 drop-shadow-lg">
          ¡Conocé nuestros sabores <span class=" italic text-primary">dulces</span>!
        </h2>        
        <p class="text-sm sm:text-lg md:text-xl mb-6 drop-shadow-lg">
          Descubrí una amplia variedad de esencias como Chocolate, Vainilla, Marroc, Frutos del Bosque, y muchas más.
        </p>
        <Button variant="primary" href="/sabores/dulces" class="inline-block">
          Ver más
        </Button>
      </div>
    </div>
  </div>

