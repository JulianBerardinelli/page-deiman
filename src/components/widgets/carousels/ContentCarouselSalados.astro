---
// ContentCarousel.astro
import Carousel from '../../ui/Carousel.astro';
---

<Carousel>

    <div class="carousel-slide relative">
        <picture>
          <source srcset="/images/carousel/car-salados-phone-1.png" media="(max-width: 768px)" />
          <img
            src="/images/carousel/car-salados-1.png"
            alt="Esencias saladas Deiman"
            class="absolute inset-0 w-full h-full object-cover -z-10"
          />
        </picture>
      
        <!-- Overlay oscuro -->
        <div class="absolute inset-0 bg-black/30 z-0"></div>
      
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center text-white px-6 sm:px-10 z-10">
          <h2 class="text-4xl sm:text-5xl font-bold mb-3 drop-shadow-xl tracking-wide text-[#fff3e3]">
            Sabores Salados
          </h2>
      
          <span class="text-sm sm:text-base bg-[#f57e7e] text-[#362b1f] px-4 py-1 rounded-full tracking-wider mb-5 shadow-md">
            Sabores intensos y versátiles
          </span>
      
          <p class="max-w-2xl text-base sm:text-lg md:text-xl drop-shadow-xl leading-relaxed text-white">
            Desde notas especiadas como <span class="text-[#ffb5b5] font-semibold">ajo</span>, <span class="text-[#ffb5b5] font-semibold">pimienta</span> y <span class="text-[#ffb5b5] font-semibold">nuez moscada</span>, hasta perfiles más complejos como <span class="text-[#ffb5b5] font-semibold">jamón ahumado</span>, <span class="text-[#ffb5b5] font-semibold">salame</span> o <span class="text-[#ffb5b5] font-semibold">queso parmesano</span>, estas esencias aportan identidad a productos salados, fiambres, snacks y platos preparados.
          </p>
        </div>
      </div>
      


</Carousel>
