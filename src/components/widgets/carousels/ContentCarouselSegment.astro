---
import Carousel from '../../ui/Carousel.astro';

const { slides = [] } = Astro.props;
---

<Carousel>
  {slides.map((slide) => (
    <div class="carousel-slide relative">
      <picture>
        {slide.imageMobile && <source srcset={slide.imageMobile} media="(max-width: 768px)" />}
        <img
          src={slide.image}
          alt={slide.alt ?? 'Imagen de producto'}
          class="absolute inset-0 w-full h-full object-cover -z-10"
        />
      </picture>

      <div
        class:list={[
          'absolute inset-0 flex px-6 sm:px-10 md:px-20 text-white',
          slide.align === 'right' ? 'items-center justify-end' : 'items-center justify-center',
        ]}
      >
        <div class:list={['max-w-2xl', slide.align === 'right' ? 'text-right' : 'text-center']}>
          <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 drop-shadow-md" set:html={slide.title} />
          <hr class="my-4 border-t border-white/30" />
          <p class="text-base sm:text-lg md:text-xl leading-relaxed drop-shadow-md" set:html={slide.description} />
        </div>
      </div>
    </div>
  ))}
</Carousel>
