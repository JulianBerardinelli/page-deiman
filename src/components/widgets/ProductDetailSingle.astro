---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';

interface Props {
  id: string;
  title: string;
  description: string;
  badge?: string;
}

const { id, title, description, badge } = Astro.props as Props;
const content = await Astro.slots.render('content');
---

<WidgetWrapper id={id} containerClass="max-w-5xl" noAnimation={true}>
  <div class="text-center">
    {badge && (
      <span class="inline-flex items-center rounded-full bg-primary/10 px-4 py-1 text-sm font-semibold text-primary">
        {badge}
      </span>
    )}
    <Headline
      title={title}
      subtitle={description}
      classes={{
        container: `text-center max-w-3xl mx-auto ${badge ? 'mt-4' : ''}`,
        title: 'text-3xl md:text-4xl',
      }}
    />
  </div>

  <div class="mt-8 text-left" set:html={content} />
</WidgetWrapper>
