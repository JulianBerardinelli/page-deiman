---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import FlavorFeature from '~/components/widgets/FlavorFeature.astro';
import ContentCarouselLab from '~/components/widgets/carousels/ContentCarouselLab.astro';
import FlavorRange from '~/components/ui/FlavorRange.astro';
import labImage from '~/assets/images/laboratorio.png';
import Features3 from '~/components/widgets/Features3.astro';
import FindUs from '~/components/widgets/FindUs.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';

const metadata = {
  title: 'Laboratorio de Desarrollo  ',
  description: 'Descubre nuestro laboratorio de desarrollo de sabores, donde creamos soluciones personalizadas para la industria alimentaria y más.',
  openGraph: {
    title: 'Laboratorio de Desarrollo - Deiman Sabores',
    description: 'Descubre nuestro laboratorio de desarrollo de sabores, donde creamos soluciones personalizadas para la industria alimentaria y más.',
    image: '/images/laboratorio.png',
    url: 'https://www.deiman.com.ar/laboratorio',
  },
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>



  <ContentCarouselLab />

  <FlavorRange
  noAnimation={true}
  id="laboratorio"
  title='Laboratorio de <span class="text-primary">Desarrollo</span>'
  subtitle="Precisión, creatividad y personalización"
  tagline="Sabores a medida para cada necesidad"
  items={[
    {
      title: 'Desarrollo técnico centrado en el cliente',
      description:
        'Creamos perfiles aromáticos exclusivos adaptados a los procesos y objetivos de cada cliente. Nuestra metodología combina selección de materias primas nobles, análisis sensorial y reformulación constante para garantizar identidad y performance.',
    },
    {
      title: 'Aplicación transversal en múltiples industrias',
      description:
        'Nuestros sabores se desarrollan considerando compatibilidad técnica con alimentos, bebidas, suplementos, cosmética y más. Acompañamos cada proyecto desde la idea hasta el producto final, asegurando estabilidad, seguridad y diferenciación.',
    },
  ]}
  callToAction={{ href: '/contacto', text: 'Solicitar catálogo' }}
/>

<Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Vainillas y derivados',
        description: 'Notas cálidas y envolventes: vainilla, dulce de leche, marroc y más. Sabores icónicos con carácter argentino.',
        icon: 'tabler:ice-cream',
      },
      {
        title: 'Chocolates',
        description: 'Cacao intenso, chocolate con leche y perfiles semi amargos para productos premium.',
        icon: 'tabler:candy',
      },
      {
        title: 'Frutales',
        description: 'Sabores definidos y frescos: frutos rojos, cítricos, banana, ananá y más.',
        icon: 'tabler:apple',
      },
      {
        title: 'Especiados y panificados',
        description: 'Canela, miel, caramelo y esencias que evocan lo artesanal. Muy buscados en panificación y repostería.',
        icon: 'tabler:bread',
      },
      {
        title: 'Mentolados y herbales',
        description: 'Menta, eucalipto y perfiles verdes para aplicaciones refrescantes o funcionales.',
        icon: 'tabler:plant',
      },
      {
        title: 'Amplia aplicabilidad',
        description: 'Formulaciones compatibles con alimentos, bebidas, suplementos, cosmética y más.',
        icon: 'tabler:tool',
      },
    ]}
  />





  <!-- sabores wid  **************** -->
  <FlavorFeature
  id="sabores"
  items={[
    {
      title: 'DULCES',
      image: '/images/sabores/dulces.png',
      href: '/sabores/dulces',
    },
    {
      title: 'SALADOS',
      image: '/images/sabores/salados.png',
      href: '/sabores/salados',
    },
    {
      title: 'PANIFICADOS',
      image: '/images/sabores/panificados.png',
      href: '/sabores/panificados',
    },
    {
      title: 'CÍTRICAS',
      image: '/images/sabores/citricos.png',
      href: '/sabores/citricas',
    },
  ]}
/>

  <FindUs/>

    <!-- Support Overview Widget **************** -->
    <SupportOverview/>
</Layout>
