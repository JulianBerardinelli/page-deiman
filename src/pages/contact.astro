---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto - Deiman',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="¿Hablamos?" />

  <ContactUs
    id="form"
    title="Dejanos tu mensaje"
    subtitle="Si querés desarrollar un nuevo sabor, necesitás asesoramiento técnico o querés conocer más sobre nuestros productos, completá el siguiente formulario y nuestro equipo se pondrá en contacto con vos a la brevedad."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario aceptás que Deiman utilice tus datos para responder tu consulta. Tus datos no serán compartidos con terceros.',
    }}
    description="Respondemos habitualmente dentro de las 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="También podés contactarnos por otras vías"
    items={[
      {
        title: 'Atención general',
        description: `Consultas sobre nuestros sabores, aplicaciones, o información institucional.`,
      },
      {
        title: 'Equipo técnico',
        description:
          'Asesoramiento sobre formulación, aplicación en productos, dosificación o compatibilidades.',
      },
      {
        title: 'Ventas',
        description:
          'Pedidos, cotizaciones personalizadas, muestras, o contacto con distribuidores.',
      },
      {
        title: 'Teléfono',
        description: '+54 11 4452-5700',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contacto@deiman.com.ar',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Calle Falsa 123, Parque Industrial, Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
