---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Sobre nosotros',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Conocenos"
  >
    <Fragment slot="title">
      Sabores que inspiran <br />
      <span class="animate-gradient-text font-bold">confiabilidad y excelencia</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-primary">Deiman</span> es una empresa argentina especializada en el desarrollo de esencias y sabores alimentarios. Nuestra filosofía combina profesionalismo, creatividad y cercanía con el cliente. Nos enfocamos en materias primas naturales y procesos técnicos rigurosos para lograr productos funcionales, seguros y memorables.
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->
  <Features3
    title="Lo que nos define"
    subtitle="Somos una empresa joven que apuesta por la calidad, la innovación y el vínculo directo con nuestros clientes."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Calidad sustentada en lo natural',
        description: 'Seleccionamos ingredientes nobles, con trazabilidad y alto estándar técnico. Cada esencia refleja autenticidad y seguridad.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Desarrollo técnico a medida',
        description: 'Creamos perfiles aromáticos personalizados que se adaptan a los procesos industriales de cada cliente.',
        icon: 'tabler:flask',
      },
      {
        title: 'Atención cercana y flexible',
        description: 'Establecemos relaciones de confianza, con respuestas ágiles, asesoramiento y acompañamiento en cada etapa del proyecto.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Vainillas y derivados',
        description: 'Notas cálidas y envolventes: vainilla, dulce de leche, marroc y más. Sabores icónicos con carácter argentino.',
        icon: 'tabler:ice-cream',
      },
      {
        title: 'Chocolates',
        description: 'Cacao intenso, chocolate con leche y perfiles semi amargos para productos premium.',
        icon: 'tabler:candy',
      },
      {
        title: 'Frutales',
        description: 'Sabores definidos y frescos: frutos rojos, cítricos, banana, ananá y más.',
        icon: 'tabler:apple',
      },
      {
        title: 'Especiados y panificados',
        description: 'Canela, miel, caramelo y esencias que evocan lo artesanal. Muy buscados en panificación y repostería.',
        icon: 'tabler:bread',
      },
      {
        title: 'Mentolados y herbales',
        description: 'Menta, eucalipto y perfiles verdes para aplicaciones refrescantes o funcionales.',
        icon: 'tabler:plant',
      },
      {
        title: 'Amplia aplicabilidad',
        description: 'Formulaciones compatibles con alimentos, bebidas, suplementos, cosmética y más.',
        icon: 'tabler:tool',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Nuestros pilares"
    subtitle="Cada esencia que desarrollamos refleja estos valores:"
    items={[
      {
        title: 'Compromiso técnico',
        description: 'Nuestros procesos cumplen con normativas exigentes y estándares de calidad internacionales. Cada sabor es testeado rigurosamente.',
      },
      {
        title: 'Innovación constante',
        description: 'Combinamos creatividad e ingeniería para lanzar soluciones funcionales, disruptivas y estables en el tiempo.',
      },
      {
        title: 'Cuidado en los detalles',
        description: 'Desde la materia prima hasta la atención postventa, garantizamos excelencia en todo el recorrido del producto.',
      },
    ]}
  />

  <section class="py-10 px-4 max-w-6xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-2">¿Dónde estamos?</h2>
    <p class="text-lg mb-6 text-gray-600">Gral. Madariaga 1187, Parque Industrial Burzaco, Buenos Aires - Argentina</p>

    <div class="w-full h-[400px] rounded-xl overflow-hidden shadow-lg border">
      <iframe
        title="Ubicación en Google Maps"
        width="100%"
        height="100%"
        frameborder="0"
        style={{ border: 0 }}
        allowfullscreen
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3274.8706909605976!2d-58.4296289237204!3d-34.83434356971549!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcd47a25d401b5%3A0x5442fefa1fb543b1!2sGral.%20Madariaga%201187%2C%20B1852%20Burzaco%2C%20Provincia%20de%20Buenos%20Aires%2C%20Argentina!5e0!3m2!1ses!2sfi!4v1752782376374!5m2!1ses!2sfi"
      ></iframe>
    </div>
  </section>

  <!-- Features2 Widget ************** -->
  <Features2
    title="¿Tenés dudas o querés empezar?"
    tagline="Contactanos"
    columns={3}
    items={[
      {
        title: 'Atención general',
        description: 'Consultas sobre cuentas, navegación del sitio o información institucional.',
        icon: 'tabler:info-circle',
      },
      {
        title: 'Área comercial',
        description: 'Presupuestos, desarrollos a medida, cotizaciones o asesoramiento de producto.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Soporte técnico',
        description: 'Asistencia en aplicaciones, reformulaciones o compatibilidades.',
        icon: 'tabler:tool',
      },
      {
        title: 'Teléfono',
        description: '+54 (11) 1234-5678',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'info@<span class="text-primary">deiman</span>.com.ar',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
