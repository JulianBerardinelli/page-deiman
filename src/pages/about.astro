---
import Features3 from '~/components/widgets/Features3.astro';
import FindUs from '~/components/widgets/FindUs.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Sobre nosotros',
  description: 'Conocé más sobre DEIMAN, una empresa argentina especializada en la elaboración y desarrollo de saborizantes alimenticios. Nuestra filosofía combina profesionalismo, creatividad y cercanía con el cliente.', 
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Conocenos"
  >
    <Fragment slot="title">
      Sabores que inspiran <br />
      <span class="animate-gradient-text font-bold">confiabilidad y excelencia</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-primary font-bold">DEIMAN</span> es una empresa argentina especializada en la elaboración y desarrollo de saborizantes alimenticios. Nuestra filosofía combina profesionalismo, creatividad y cercanía con el cliente. Nos enfocamos en materias primas naturales y de primera calidad, con procesos técnicos rigurosos para lograr productos que te identifiquen, que sean memorables.
    </Fragment>

    <Fragment slot="image">
      <img
        src="/images/backgrounds/banner1.jpg"
        alt="Imagen ilustrativa de sabores Deiman"
        class="mx-auto rounded-md w-full max-w-4xl"
        loading="eager"
      />
    </Fragment>

    
  </Hero>

  <!-- Features3 Widget ************** -->
  <Features3
    title='<span class="text-primary font-bold">Lo que nos define </span>'
    subtitle="Somos una empresa joven que apuesta por la calidad, la innovación y el vínculo directo con nuestros clientes."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Calidad sustentada en lo natural',
        description: 'Seleccionamos ingredientes nobles, con trazabilidad y alto estándar técnico. Cada esencia refleja autenticidad y seguridad.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Desarrollo técnico a medida',
        description: 'Creamos perfiles aromáticos personalizados que se adaptan a los procesos industriales de cada cliente.',
        icon: 'tabler:flask',
      },
      {
        title: 'Atención cercana y flexible',
        description: 'Establecemos relaciones de confianza, con respuestas ágiles, asesoramiento y acompañamiento en cada etapa del proyecto.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Vainillas y derivados',
        description: 'Notas cálidas y envolventes: vainilla, dulce de leche, marroc y más. Sabores icónicos con carácter argentino.',
        icon: 'tabler:ice-cream',
      },
      {
        title: 'Chocolates',
        description: 'Cacao intenso, chocolate con leche y perfiles semi amargos para productos premium.',
        icon: 'tabler:candy',
      },
      {
        title: 'Frutales',
        description: 'Sabores definidos y frescos: frutos rojos, cítricos, banana, ananá y más.',
        icon: 'tabler:apple',
      },
      {
        title: 'Especiados y panificados',
        description: 'Canela, miel, caramelo y esencias que evocan lo artesanal. Muy buscados en panificación y repostería.',
        icon: 'tabler:bread',
      },
      {
        title: 'Mentolados y herbales',
        description: 'Menta, eucalipto y perfiles verdes para aplicaciones refrescantes o funcionales.',
        icon: 'tabler:plant',
      },
      {
        title: 'Amplia aplicabilidad',
        description: 'Formulaciones compatibles con alimentos, bebidas, suplementos, cosmética y más.',
        icon: 'tabler:tool',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Nuestros pilares"
    subtitle="Cada esencia que desarrollamos refleja estos valores:"
    items={[
      {
        title: 'Compromiso técnico',
        description: 'Nuestros procesos cumplen con normativas exigentes y estándares de calidad internacionales. Cada sabor es testeado rigurosamente.',
      },
      {
        title: 'Innovación constante',
        description: 'Combinamos creatividad e ingeniería para lanzar soluciones funcionales, disruptivas y estables en el tiempo.',
      },
      {
        title: 'Cuidado en los detalles',
        description: 'Desde la materia prima hasta la atención postventa, garantizamos excelencia en todo el recorrido del producto.',
      },
    ]}

  />

  <!-- FindUs Widget **************** -->
  <FindUs/>

  <!-- Support Overview Widget **************** -->
  <SupportOverview/>
</Layout>
