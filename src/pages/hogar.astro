---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import FindUs from '~/components/widgets/FindUs.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import { headerData } from '~/navigation';

const metadata = {
  title: 'Hogar',
  description: 'Sabores pensados para aplicaciones caseras y emprendimientos.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <Hero tagline="Hogar">
    <Fragment slot="title">
      Sabores cercanos <br />
      <span class="animate-gradient-text font-bold">para proyectos caseros</span>
    </Fragment>

    <Fragment slot="subtitle">
      Propuestas pensadas para pequeños emprendimientos, con perfiles suaves, auténticos y fáciles de aplicar en
      recetas artesanales.
    </Fragment>

    <Fragment slot="image">
      <img
        src="/images/backgrounds/test.jpg"
        alt="Sabores para el hogar Deiman"
        class="mx-auto rounded-md w-full max-w-4xl"
        loading="eager"
      />
    </Fragment>
  </Hero>

  <FindUs />

  <SupportOverview />
</Layout>
