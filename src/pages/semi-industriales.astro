---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import FindUs from '~/components/widgets/FindUs.astro';
import SemiIndustrialFlavorFeatureContainer from '~/components/widgets/SemiIndustrialFlavorFeatureContainer.astro';
import ProductGuide from '~/components/widgets/ProductGuide.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import { headerData } from '~/navigation';

const metadata = {
  title: 'Semi industriales',
  description: 'Sabores flexibles y eficientes para producciones medianas.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <Hero
    classes={{ container: 'mt-0', spacer: 'hidden pt-0 md:pt-8' }}
    tagline='<span class="text-white/90 tracking-widest font-semibold uppercase">Semi industriales</span>'
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar catálogo',
        href: '/contact',
      },
      {
        variant: 'secondary',
        text: 'Asesoramiento técnico',
        href: '/contact',
        class: 'border-2 border-white/60 text-white font-bold hover:bg-white hover:text-black transition-colors',
      },
    ]}
  >
    <Fragment slot="bg">
      <img src="/images/backgrounds/semi-industriales.jpg" alt="Fondo Semi industriales" class="absolute inset-0 w-full h-full object-cover pointer-events-none" loading="eager" />
      <div class="absolute inset-0 bg-black/20 pointer-events-none"></div>
    </Fragment>

    <Fragment slot="title">
      <span class="text-white">Sabor y rendimiento ideal</span> <br />
      <span class="animate-gradient-text font-bold drop-shadow-md">para heladerías y panaderías</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-white/90 drop-shadow-sm">Fórmulas equilibradas con perfiles aromáticos definidos, especialmente diseñadas para adaptarse a producciones artesanales y semi industriales como heladerías, panaderías y reposterías, garantizando calidad en cada elaboración.</span>
    </Fragment>
  </Hero>

  <ProductGuide
    id="guia-semi-industrial"
    tagline="Guía semi industrial"
    title="¿Qué es una solución semi industrial?"
    subtitle="Desarrollos flexibles que combinan rendimiento y adaptabilidad para producciones medianas."
    items={[
      {
        title: 'Flexibilidad',
        description:
          'Perfiles aromáticos que se adaptan a distintos procesos con ajustes rápidos y controlados.',
        icon: 'lucide:wand-2',
      },
      {
        title: 'Escalabilidad gradual',
        description:
          'Pensado para crecer por etapas, manteniendo la calidad del sabor en cada nueva escala de producción.',
        icon: 'lucide:trending-up',
      },
      {
        title: 'Equilibrio sensorial',
        description:
          'Formulaciones equilibradas para lograr estabilidad y fidelidad aromática en lotes medianos.',
        icon: 'lucide:scale',
      },
    ]}
  />

  <Features2
    columns={2}
    classes={{ container: 'max-w-5xl mx-auto' }}
    title="Presentaciones prácticas para tu negocio"
    subtitle="Ofrecemos formatos en <span class='text-primary font-semibold'>líquido y polvo</span> pensados específicamente para <span class='text-primary font-semibold'>facilitar el manejo y almacenamiento</span> en heladerías, panaderías y emprendimientos medianos."
    items={[
      {
        title: 'Presentaciones Líquidas',
        description: 'Formatos disponibles en 1 kg, 5 kg y 10 kg. Ideales para fácil dosificación y rápida integración en todo tipo de preparaciones.',
        icon: 'tabler:droplet',
        productImages: [
          {
            src: '/images/products/bidon-semi-ind-helados.png',
            alt: 'Bidón Heladería',
            hoverText: '1 kg, 5 kg y 10 kg',
          },
          {
            src: '/images/products/bidon-semi-panaderia.png',
            alt: 'Bidón Panadería',
            hoverText: '1 kg, 5 kg y 10 kg',
          }
        ],
      },
      {
        title: 'Presentaciones en Polvo',
        description: 'Formatos disponibles en 1 kg, 5 kg y 10 kg. Perfectos para mezclas secas, asegurando vida útil prolongada y control preciso en la receta.',
        icon: 'tabler:box-seam',
        productImages: [
          {
            src: '/images/products/caja-semi-ind-helados.png',
            alt: 'Caja Heladería',
            hoverText: '1 kg, 5 kg y 10 kg',
          },
          {
            src: '/images/products/caja-semi-ind-panaderia.png',
            alt: 'Caja Panadería',
            hoverText: '1 kg, 5 kg y 10 kg',
          }
        ],
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-primary/5 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <SemiIndustrialFlavorFeatureContainer />

  <FindUs />

  <SupportOverview />
</Layout>
