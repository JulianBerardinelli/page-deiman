---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import FindUs from '~/components/widgets/FindUs.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import { headerData } from '~/navigation';

const metadata = {
  title: 'Semi industriales',
  description: 'Sabores flexibles y eficientes para producciones medianas.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <Hero tagline="Semi industriales">
    <Fragment slot="title">
      Rendimiento y sabor <br />
      <span class="animate-gradient-text font-bold">para producciones medianas</span>
    </Fragment>

    <Fragment slot="subtitle">
      Fórmulas equilibradas para líneas semi industriales, con perfiles aromáticos definidos y gran adaptabilidad.
      Pensadas para quienes buscan calidad sin perder flexibilidad.
    </Fragment>

    <Fragment slot="image">
      <img
        src="/images/backgrounds/test.jpg"
        alt="Soluciones semi industriales Deiman"
        class="mx-auto rounded-md w-full max-w-4xl"
        loading="eager"
      />
    </Fragment>
  </Hero>

  <FindUs />

  <SupportOverview />
</Layout>
