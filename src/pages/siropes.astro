---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import FlavorRange from '~/components/ui/FlavorRange.astro';
import siropesImage from '~/assets/images/siropes.jpg';
import FindUs from '~/components/widgets/FindUs.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import FlavorFeatureContainer from '~/components/widgets/FlavorFeatureContainer.astro';
import ContentCarouselSiropes from '~/components/widgets/carousels/ContentCarouselSiropes.astro';

const metadata = {
  title: '¡Descubri nuestros Siropes!',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <ContentCarouselSiropes />

  <FlavorRange
  noAnimation={true}
  id="siropes"
  title='Sabores <span class="text-primary">Siropes</span>'
  subtitle="Cremosos, dulces y tentadores"
  tagline="Sabores clásicos y gourmet para productos irresistibles"
  items={[
    {
      title: 'Variedad de perfiles indulgentes',
      description:
        'Ofrecemos esencias que reproducen con fidelidad sabores como chocolate, dulce de leche, pistacho, frutilla, caramelo o limón. Cada perfil está formulado para brindar una experiencia sensorial auténtica, equilibrando dulzura, cremosidad y notas aromáticas características.',
    },
    {
      title: 'Diseñadas para alto rendimiento y aplicación directa',
      description:
        'Ideales para siropes, coberturas, postres, helados, yogures o rellenos. Nuestras esencias son termoestables, altamente concentradas y adaptables a matrices líquidas o cremosas, manteniendo su perfil y textura sin degradarse.',
    },
  ]}
  callToAction={{ href: '/contacto', text: 'Solicitar catálogo' }}
  image={{
    src: siropesImage,
    alt: 'Imagen de esencias siropes',
  }}
/>







  <!-- sabores wid  **************** -->
  <FlavorFeatureContainer/>

  <FindUs />

  <!-- Support Overview Widget **************** -->
  <SupportOverview/>
</Layout>
