---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import FindUs from '~/components/widgets/FindUs.astro';
import IndustrialFlavorFeatureContainer from '~/components/widgets/IndustrialFlavorFeatureContainer.astro';
import ProductGuide from '~/components/widgets/ProductGuide.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import { headerData } from '~/navigation';

const metadata = {
  title: 'Industriales',
  description: 'Soluciones de sabor diseñadas para procesos industriales a gran escala.',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <Hero
    classes={{ container: 'mt-0', spacer: 'hidden pt-0 md:pt-8' }}
    tagline='<span class="text-white/90 tracking-widest font-semibold uppercase">Industriales</span>'
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar catálogo',
        href: '/contact',
      },
      {
        variant: 'secondary',
        text: 'Hablar con un especialista',
        href: '/contact',
        class: 'border-2 border-white/60 text-white font-bold hover:bg-white hover:text-black transition-colors',
      },
    ]}
  >
    <Fragment slot="bg">
      <img src="/images/backgrounds/industriales.jpg" alt="Fondo Industriales" class="absolute inset-0 w-full h-full object-cover pointer-events-none" loading="eager" />
      <div class="absolute inset-0 bg-black/20 pointer-events-none"></div>
    </Fragment>

    <Fragment slot="title">
      <span class="text-white">Soluciones integrales</span> <br />
      <span class="animate-gradient-text font-bold drop-shadow-md">para procesos industriales</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-white/90 drop-shadow-sm">Formulaciones estables y escalables para grandes volúmenes, con soporte técnico dedicado para garantizar consistencia, trazabilidad y rendimiento en cada lote.</span>
    </Fragment>
  </Hero>

  <ProductGuide
    id="guia-industrial"
    tagline="Guía industrial"
    title="¿Qué significa un producto industrial en Deiman?"
    subtitle="Soluciones pensadas para procesos continuos, con foco en rendimiento, estabilidad y acompañamiento técnico."
    items={[
      {
        title: 'Escala y consistencia',
        description:
          'Formulaciones diseñadas para grandes volúmenes, con perfiles estables y resultados repetibles en cada lote.',
        icon: 'lucide:layers',
      },
      {
        title: 'Eficiencia operativa',
        description:
          'Optimización de dosificación, tiempos y rendimiento para integrarse sin fricciones a líneas automatizadas.',
        icon: 'lucide:settings',
      },
      {
        title: 'Soporte técnico',
        description:
          'Acompañamiento en formulación, escalado y ajustes para asegurar la calidad final del producto.',
        icon: 'lucide:badge-check',
      },
    ]}
  />

  <Features2
    columns={2}
    classes={{ container: 'max-w-5xl mx-auto' }}
    title="Presentaciones a la medida de tu producción"
    subtitle="Nuestros productos se adaptan a tus necesidades. Ofrecemos formatos en <span class='text-primary font-semibold'>líquido y polvo</span>, diseñados para <span class='text-primary font-semibold'>optimizar el almacenamiento, manejo y dosificación</span> en procesos industriales."
    items={[
      {
        title: 'Presentaciones Líquidas',
        description: 'Formatos disponibles en 10 kg, 15 kg y 20 kg. Ideales para rápida integración y homogeneidad en mezclas húmedas y emulsiones.',
        icon: 'tabler:droplet',
        productImages: [
          {
            src: '/images/products/bidon-industrial.png',
            alt: 'Bidón Industrial',
            hoverText: '10 kg, 15 kg y 20 kg',
          }
        ],
      },
      {
        title: 'Presentaciones en Polvo',
        description: 'Formatos disponibles en 10 kg, 15 kg, 20 kg y 25 kg. Perfectos para mezclas secas, garantizando estabilidad prolongada y control preciso.',
        icon: 'tabler:box-seam',
        productImages: [
          {
            src: '/images/products/caja-industrial.png',
            alt: 'Caja Industrial',
            hoverText: '10 kg, 15 kg, 20 kg y 25 kg',
          }
        ],
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-primary/5 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <IndustrialFlavorFeatureContainer />

  <FindUs />

  <SupportOverview />
</Layout>
