---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import Features2 from '~/components/widgets/Features2.astro';
import ContentCarousel from '~/components/widgets/carousels/ContentCarouselFlavor.astro';
import FlavorFeature from '~/components/widgets/FlavorFeature.astro';
import FlavorRange from '~/components/ui/FlavorRange.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FindUs from '~/components/widgets/FindUs.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';

const metadata = {
  title: 'Sabores ',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <ContentCarousel />

  <FlavorRange
  noAnimation={true}
  id="sabores"
  title='Líneas de <span class="text-primary">Sabores</span>'
  subtitle="Naturalidad, innovación y precisión sensorial"
  tagline="Para productos alimenticios que buscan destacarse"
  items={[
    {
      title: 'Desarrollos naturales, confiables y funcionales',
      description:
        'Nuestros sabores están formulados a partir de materias primas seleccionadas, con tecnología de vanguardia y un riguroso control de calidad. Cada perfil es diseñado para transmitir autenticidad, estabilidad y seguridad en su aplicación.',
    },
    {
      title: 'Alta adaptabilidad para múltiples matrices',
      description:
        'Contamos con líneas dulces, saladas, frutales, cítricas, panificadas, especiadas y más. Cada esencia se adapta con precisión a procesos industriales, matrices líquidas o sólidas, y diversas condiciones de temperatura o pH.',
    },
  ]}
  callToAction={{ href: '/contacto', text: 'Solicitar catálogo' }}
/>



  <!-- sabores wid  **************** -->
  <FlavorFeature
  id="sabores"
  items={[
      {
        title: 'DULCES',
        image: '/images/sabores/dulces.png',
        href: '/sabores/dulces',
        buttonText: 'Ver sabores',
      },
      {
        title: 'SALADOS',
        image: '/images/sabores/salados.png',
        href: '/sabores/salados',
        buttonText: 'Ver sabores',
      },
      {
        title: 'PANIFICADOS',
        image: '/images/sabores/panificados.png',
        href: '/sabores/panificados',
        buttonText: 'Ver sabores',
      },
      {
        title: 'CÍTRICOS',
        image: '/images/sabores/citricos.png',
        href: '/sabores/citricos',
        buttonText: 'Ver sabores',
      },
      {
        title: 'LABORATORIO',
        image: '/images/sabores/laboratory.png',
        href: '/laboratorio',
        buttonText: 'Descubrí nuestros desarrollos',
        description: 'Desarrollamos sabores y notas personalizadas, adaptándonos a las necesidades de cada cliente.',
      },
  ]}
/>

<Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Vainillas y derivados',
        description: 'Notas cálidas y envolventes: vainilla, dulce de leche, marroc y más. Sabores icónicos con carácter argentino.',
        icon: 'tabler:ice-cream',
      },
      {
        title: 'Chocolates',
        description: 'Cacao intenso, chocolate con leche y perfiles semi amargos para productos premium.',
        icon: 'tabler:candy',
      },
      {
        title: 'Frutales',
        description: 'Sabores definidos y frescos: frutos rojos, cítricos, banana, ananá y más.',
        icon: 'tabler:apple',
      },
      {
        title: 'Especiados y panificados',
        description: 'Canela, miel, caramelo y esencias que evocan lo artesanal. Muy buscados en panificación y repostería.',
        icon: 'tabler:bread',
      },
      {
        title: 'Mentolados y herbales',
        description: 'Menta, eucalipto y perfiles verdes para aplicaciones refrescantes o funcionales.',
        icon: 'tabler:plant',
      },
      {
        title: 'Amplia aplicabilidad',
        description: 'Formulaciones compatibles con alimentos, bebidas, suplementos, cosmética y más.',
        icon: 'tabler:tool',
      },
    ]}
  />

  <!-- FindUs Widget **************** -->

  <FindUs/>

    <!-- Support Overview Widget **************** -->
    <SupportOverview/>
</Layout>
