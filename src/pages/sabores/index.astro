---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import Features2 from '~/components/widgets/Features2.astro';
import ContentCarousel from '~/components/widgets/carousels/ContentCarouselFlavor.astro';
import FlavorFeature from '~/components/widgets/FlavorFeature.astro';
import FlavorRange from '~/components/ui/FlavorRange.astro';
import Features3 from '~/components/widgets/Features3.astro';

const metadata = {
  title: 'Sabores - DEIMAN',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <ContentCarousel />

  <FlavorRange
  id="sabores"
  title='Líneas de <span class="text-primary">Sabores</span>'
  subtitle="Naturalidad, innovación y precisión sensorial"
  tagline="Para productos alimenticios que buscan destacarse"
  items={[
    {
      title: 'Desarrollos naturales, confiables y funcionales',
      description:
        'Nuestros sabores están formulados a partir de materias primas seleccionadas, con tecnología de vanguardia y un riguroso control de calidad. Cada perfil es diseñado para transmitir autenticidad, estabilidad y seguridad en su aplicación.',
    },
    {
      title: 'Alta adaptabilidad para múltiples matrices',
      description:
        'Contamos con líneas dulces, saladas, frutales, cítricas, panificadas, especiadas y más. Cada esencia se adapta con precisión a procesos industriales, matrices líquidas o sólidas, y diversas condiciones de temperatura o pH.',
    },
  ]}
  callToAction={{ href: '/contacto', text: 'Solicitar catálogo' }}
/>



  <!-- sabores wid  **************** -->
  <FlavorFeature
  id="sabores"
  items={[
      {
        title: 'DULCES',
        image: '/images/sabores/dulces.png',
        href: '/sabores/dulces',
        buttonText: 'Ver sabores',
      },
      {
        title: 'SALADOS',
        image: '/images/sabores/salados.png',
        href: '/sabores/salados',
        buttonText: 'Ver sabores',
      },
      {
        title: 'PANIFICADOS',
        image: '/images/sabores/panificados.png',
        href: '/sabores/panificados',
        buttonText: 'Ver sabores',
      },
      {
        title: 'CÍTRICOS',
        image: '/images/sabores/citricos.png',
        href: '/sabores/citricas',
        buttonText: 'Ver sabores',
      },
      {
        title: 'LABORATORIO',
        image: '/images/sabores/laboratory.png',
        href: '/laboratorio',
        buttonText: 'Descubrí nuestros desarrollos',
        description: 'Desarrollamos sabores y notas personalizadas, adaptándonos a las necesidades de cada cliente.',
      },
  ]}
/>

<Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Vainillas y derivados',
        description: 'Notas cálidas y envolventes: vainilla, dulce de leche, marroc y más. Sabores icónicos con carácter argentino.',
        icon: 'tabler:ice-cream',
      },
      {
        title: 'Chocolates',
        description: 'Cacao intenso, chocolate con leche y perfiles semi amargos para productos premium.',
        icon: 'tabler:candy',
      },
      {
        title: 'Frutales',
        description: 'Sabores definidos y frescos: frutos rojos, cítricos, banana, ananá y más.',
        icon: 'tabler:apple',
      },
      {
        title: 'Especiados y panificados',
        description: 'Canela, miel, caramelo y esencias que evocan lo artesanal. Muy buscados en panificación y repostería.',
        icon: 'tabler:bread',
      },
      {
        title: 'Mentolados y herbales',
        description: 'Menta, eucalipto y perfiles verdes para aplicaciones refrescantes o funcionales.',
        icon: 'tabler:plant',
      },
      {
        title: 'Amplia aplicabilidad',
        description: 'Formulaciones compatibles con alimentos, bebidas, suplementos, cosmética y más.',
        icon: 'tabler:tool',
      },
    ]}
  />

<section class="py-10 px-4 max-w-6xl mx-auto text-center">
  <h2 class="text-3xl font-bold mb-2">¿Dónde estamos?</h2>
  <p class="text-lg mb-6 text-gray-600">Gral. Madariaga 1187, Parque Industrial Burzaco, Buenos Aires - Argentina</p>

  <div class="w-full h-[400px] rounded-xl overflow-hidden shadow-lg border">
    <iframe
      title="Ubicación en Google Maps"
      width="100%"
      height="100%"
      frameborder="0"
      style={{ border: 0 }}
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3274.8706909605976!2d-58.4296289237204!3d-34.83434356971549!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcd47a25d401b5%3A0x5442fefa1fb543b1!2sGral.%20Madariaga%201187%2C%20B1852%20Burzaco%2C%20Provincia%20de%20Buenos%20Aires%2C%20Argentina!5e0!3m2!1ses!2sfi!4v1752782376374!5m2!1ses!2sfi"
    ></iframe>
  </div>
</section>

  <!-- Features2 Widget ************** -->
  <Features2
    title="¿Tenés dudas o querés empezar?"
    tagline="Contactanos"
    columns={3}
    items={[
      {
        title: 'Atención general',
        description: 'Consultas sobre cuentas, navegación del sitio o información institucional.',
        icon: 'tabler:info-circle',
      },
      {
        title: 'Área comercial',
        description: 'Presupuestos, desarrollos a medida, cotizaciones o asesoramiento de producto.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Soporte técnico',
        description: 'Asistencia en aplicaciones, reformulaciones o compatibilidades.',
        icon: 'tabler:tool',
      },
      {
        title: 'Teléfono',
        description: '+54 (11) 1234-5678',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'info@<span class="text-primary">deiman</span>.com.ar',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
