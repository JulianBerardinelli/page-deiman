---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';

import { headerData } from '~/navigation';

import ContentCarousel from '~/components/widgets/carousels/ContentCarouselDulces.astro';
import FlavorRange from '~/components/ui/FlavorRange.astro';

import dulcesImage from '~/assets/images/dulces.jpg';
import FindUs from '~/components/widgets/FindUs.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import FlavorFeatureContainer from '~/components/widgets/FlavorFeatureContainer.astro';

const metadata = {
  title: 'Sabores - Dulces',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <ContentCarousel />
  <FlavorRange
  noAnimation={true}
  id="dulces"
  title='Sabores <span class="text-primary">Dulces</span>'
  subtitle="Aromas envolventes y reconfortantes"
  tagline="Para productos de repostería, lácteos y snacks"
  items={[
    {
      title: 'Variedad irresistible de sabores indulgentes',
      description:
        'Nuestra gama dulce fusiona lo clásico con lo innovador: desde notas de vainilla, chocolate y caramelo, hasta propuestas modernas como mascarpone, frutos rojos y banana dulce. Cada esencia se elabora con precisión para capturar el perfil sensorial ideal del producto final.',
    },
    {
      title: 'Naturalidad y versatilidad como premisa',
      description:
        'Trabajamos con esencias concentradas desarrolladas a partir de materias primas nobles, ideales para helados, galletitas, alfajores, yogures y más. Lográ perfiles dulces definidos con bajo dosaje y máxima fidelidad aromática.',
    },
  ]}
  callToAction={{ href: '/contacto', text: 'Solicitar catálogo' }}
  image={{
    src: dulcesImage,
    alt: 'Imagen de esencias dulces',
  }}
/>


  <!-- sabores wid  **************** -->
  <FlavorFeatureContainer/>

  <FindUs />

  <SupportOverview/>
</Layout>
