---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';
import Features2 from '~/components/widgets/Features2.astro';
import ContentCarousel from '~/components/widgets/carousels/ContentCarouselFlavor.astro';
import FlavorFeature from '~/components/widgets/FlavorFeature.astro';
import ContentCarouselSalados from '~/components/widgets/carousels/ContentCarouselSalados.astro';
import FlavorRange from '~/components/ui/FlavorRange.astro';
import saladosImage from '~/assets/images/salados.png';

const metadata = {
  title: 'Sabores - DEIMAN',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <ContentCarouselSalados />

  <FlavorRange
  id="salados"
  title='Sabores <span class="text-primary">Salados</span>'
  subtitle="Intensos, auténticos y sabrosos"
  tagline="Para productos con identidad y carácter"
  items={[
    {
      title: 'Perfiles naturales y diferenciados',
      description:
        'Creamos esencias que reproducen de forma precisa sabores como ajo, cebolla, panceta, jamón, queso parmesano o barbacoa. Cada perfil está desarrollado con ingredientes seleccionados, respetando la naturalidad y profundidad sensorial del sabor real.',
    },
    {
      title: 'Funcionales y adaptables a diversas aplicaciones',
      description:
        'Ideales para snacks, sopas, aderezos, rellenos, copetín o premezclas saladas. Nuestras esencias saladas son termoestables, de alta concentración y adecuadas para matrices grasas, líquidas o secas, manteniendo su perfil en cada uso.',
    },
  ]}
  callToAction={{ href: '/contacto', text: 'Solicitar catálogo' }}
  image={{
    src: saladosImage,
    alt: 'Imagen de esencias saladas',
  }}
/>





  <!-- sabores wid  **************** -->
  <FlavorFeature
  id="sabores"
  items={[
      {
        title: 'DULCES',
        image: '/images/sabores/dulces.png',
        href: '/sabores/dulces',
        buttonText: 'Ver sabores',
      },
      {
        title: 'SALADOS',
        image: '/images/sabores/salados.png',
        href: '/sabores/salados',
        buttonText: 'Ver sabores',
      },
      {
        title: 'PANIFICADOS',
        image: '/images/sabores/panificados.png',
        href: '/sabores/panificados',
        buttonText: 'Ver sabores',
      },
      {
        title: 'CÍTRICOS',
        image: '/images/sabores/citricos.png',
        href: '/sabores/citricas',
        buttonText: 'Ver sabores',
      },
      {
        title: 'LABORATORIO',
        image: '/images/sabores/laboratory.png',
        href: '/laboratorio',
        buttonText: 'Descubrí nuestros desarrollos',
        description: 'Desarrollamos sabores y notas personalizadas, adaptándonos a las necesidades de cada cliente.',
      },
  ]}
/>

<section class="py-10 px-4 max-w-6xl mx-auto text-center">
  <h2 class="text-3xl font-bold mb-2">¿Dónde estamos?</h2>
  <p class="text-lg mb-6 text-gray-600">Gral. Madariaga 1187, Parque Industrial Burzaco, Buenos Aires - Argentina</p>

  <div class="w-full h-[400px] rounded-xl overflow-hidden shadow-lg border">
    <iframe
      title="Ubicación en Google Maps"
      width="100%"
      height="100%"
      frameborder="0"
      style={{ border: 0 }}
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3274.8706909605976!2d-58.4296289237204!3d-34.83434356971549!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcd47a25d401b5%3A0x5442fefa1fb543b1!2sGral.%20Madariaga%201187%2C%20B1852%20Burzaco%2C%20Provincia%20de%20Buenos%20Aires%2C%20Argentina!5e0!3m2!1ses!2sfi!4v1752782376374!5m2!1ses!2sfi"
    ></iframe>
  </div>
</section>

  <!-- Features2 Widget ************** -->
  <Features2
    title="¡Estamos para ayudarte!"
    tagline="Contactanos"
    columns={3}
    items={[
      {
        title: 'Atención general',
        description: 'Consultas sobre cuentas, navegación del sitio o información institucional.',
        icon: 'tabler:info-circle',
      },
      {
        title: 'Área comercial',
        description: 'Presupuestos, desarrollos a medida, cotizaciones o asesoramiento de producto.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Soporte técnico',
        description: 'Asistencia en aplicaciones, reformulaciones o compatibilidades.',
        icon: 'tabler:tool',
      },
      {
        title: 'Teléfono',
        description: '+54 (11) 1234-5678',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'info@<span class="text-primary">deiman</span>.com.ar',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
