---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';

import { headerData } from '~/navigation';

import ContentCarouselPanifi from '~/components/widgets/carousels/ContentCarouselPanifi.astro';
import FlavorRange from '~/components/ui/FlavorRange.astro';
import panificadosImage from '~/assets/images/panificados.jpg';
import FindUs from '~/components/widgets/FindUs.astro';
import SupportOverview from '~/components/widgets/SupportOverview.astro';
import FlavorFeatureContainer from '~/components/widgets/FlavorFeatureContainer.astro';

const metadata = {
  title: 'Sabores - Panificados',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <ContentCarouselPanifi />

  <FlavorRange
  noAnimation={true}
  id="panificados"
  title='Sabores <span class="text-primary">Panificados</span>'
  subtitle="Cálidos, auténticos y deliciosos"
  tagline="Para productos de panadería y bollería"
  items={[
    {
      title: 'Sabores tradicionales que conectan con lo casero',
      description:
        'Desarrollamos perfiles cálidos como manteca, leche condensada, cereal y pan tostado que evocan lo artesanal y hogareño. Estas notas sensoriales transmiten una identidad reconocible y emocional en cada bocado.',
    },
    {
      title: 'Versatilidad para todo tipo de matrices',
      description:
        'Ideales para galletitas, budines, bizcochuelos, premezclas y productos de pastelería en general. Se aplican con facilidad, son estables al horneado y realzan naturalmente el sabor sin necesidad de agregados artificiales.',
    },
  ]}
  callToAction={{ href: '/contacto', text: 'Solicitar catálogo' }}
  image={{
    src: panificadosImage,
    alt: 'Imagen de panificados',
  }}
/>


  <!-- sabores wid  **************** -->
  <FlavorFeatureContainer/>

  <FindUs />

    <!-- Support Overview Widget **************** -->
    <SupportOverview/>
</Layout>
