---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';

import { headerData } from '~/navigation';
import Features2 from '~/components/widgets/Features2.astro';
import ContentCarousel from '~/components/widgets/carousels/ContentCarouselFlavor.astro';

import FlavorFeature from '~/components/widgets/FlavorFeature.astro';

const metadata = {
  title: 'Sabores - DEIMAN',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'primary',
          text: 'Contacto',
          href: '/contact',
        },
      ]}
      isSticky
    />
  </Fragment>

  <ContentCarousel />

  <!-- sabores wid  **************** -->
  <FlavorFeature
  id="sabores"
  items={[
    {
      title: 'DULCES',
      image: '/images/sabores/dulces.png',
      href: '/sabores/dulces',
    },
    {
      title: 'SALADOS',
      image: '/images/sabores/salados.png',
      href: '/sabores/salados',
    },
    {
      title: 'PANIFICADOS',
      image: '/images/sabores/panificados.png',
      href: '/sabores/panificados',
    },
    {
      title: 'CÍTRICAS',
      image: '/images/sabores/citricos.png',
      href: '/sabores/citricas',
    },
  ]}
/>

<section class="py-10 px-4 max-w-6xl mx-auto text-center">
  <h2 class="text-3xl font-bold mb-2">¿Dónde estamos?</h2>
  <p class="text-lg mb-6 text-gray-600">Gral. Madariaga 1187, Parque Industrial Burzaco, Buenos Aires - Argentina</p>

  <div class="w-full h-[400px] rounded-xl overflow-hidden shadow-lg border">
    <iframe
      title="Ubicación en Google Maps"
      width="100%"
      height="100%"
      frameborder="0"
      style={{ border: 0 }}
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3274.8706909605976!2d-58.4296289237204!3d-34.83434356971549!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcd47a25d401b5%3A0x5442fefa1fb543b1!2sGral.%20Madariaga%201187%2C%20B1852%20Burzaco%2C%20Provincia%20de%20Buenos%20Aires%2C%20Argentina!5e0!3m2!1ses!2sfi!4v1752782376374!5m2!1ses!2sfi"
    ></iframe>
  </div>
</section>

  <Features2
    title="¡Estamos para ayudarte!"
    items={[
      {
        title: 'Atención general',
        description:
          'Consultanos sobre gestión de cuentas, navegación del sitio, problemas de pago, acceso a productos o cualquier otra duda general sobre nuestro servicio.',
      },
      {
        title: 'Consultas de ventas',
        description:
          'Estamos disponibles para consultas sobre compras, opciones de personalización, licencias comerciales o cualquier pregunta relacionada con nuestros productos.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Si tenés problemas con la instalación de plantillas, edición, compatibilidad o descargas, nuestro equipo técnico está listo para ayudarte.',
      },
      {
        title: 'Teléfono',
        description: '+54 (11) 7503-0988',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'info@deiman.com.ar',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
